{
  "git": {
    "deploymentEnabled": {
      "main": true,
      "copilot/*": false
    }
  },
  "github": {
    "autoAlias": false,
    "autoJobCancelation": true,
    "silent": true
  },
  "ignoreCommand": "bash -c 'if [[ \"$VERCEL_GIT_COMMIT_REF\" == \"main\" ]] || [[ \"$VERCEL_GIT_COMMIT_MESSAGE\" =~ \\[deploy\\] ]]; then exit 1; else exit 0; fi'",
  "buildCommand": "npm run build",
  "installCommand": "npm ci --only=production",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/**": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ]
}